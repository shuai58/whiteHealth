page{
	background: #1769fd;
}
.packet{
	width: 100%;
	background: #1769fd;
	padding-bottom: 5%;	
}
.topbox{
	position: relative;
}
.top{
	display: block;
	width: 100%;
	height: 997rpx;
}
.topbox .packetinfo{
	position: absolute;
	left: 12.5%;
	bottom: 16%;
	display: flex;
	align-items: center;
}
.topbox .headimg{
	width: 100rpx;
	height: 100rpx;
	border-radius:100rpx;
	margin-right: 20rpx;
}
.topbox .detail{
	width: 260rpx;
	margin-right: 20rpx;
	padding-top: 10rpx;
	color: #da251c;
	font-size:60rpx;
	font-weight: 700;
	text-align: center;
	
}
.topbox .detail text{
	font-size:24rpx;	
}
.topbox .btn{
	width: 160rpx;
	height: 60rpx;
	line-height: 60rpx;
	text-align: center;
	background: #fddb33;
	border-radius:30rpx;
	color: #da251c;
	margin-top: 10rpx;
	font-size: 26rpx;
}
.topbox .tishi{
	position: absolute;
	left: 5%;
	bottom: 6.5%;
	width: 90%;
	text-align: center;
	color: #999;
	font-size: 26rpx;
	z-index: 99;
}
.packetrank{
	width: 90%;
	margin: 5% auto;
	background: #FFFFFF;
	padding: 25rpx;
	border-radius:30rpx;
	box-sizing: border-box;
}
.packetrank .rankhead{
	display: flex;
	width: 90%;
	margin: 0 auto;
	justify-content: center;
	align-items: center;
	
}
.packetrank .title{
	width: 300rpx;
	font-size: 32rpx;
	font-weight: 700;
	padding: 0 30rpx;
}
.packetrank .rankhead .img{
	width:54rpx;
	height: 90rpx;
}
.packetrank .item{
	display: flex;
	align-items: center;
	padding:15rpx 20rpx;
	border-bottom:1px solid #eee;
}
.packetrank .item .img{
	width: 90rpx;
	height: 90rpx;
	border-radius:90rpx;
	margin-right: 20rpx;
}
.packetrank .detail{
	width: 320rpx;
	margin-right: 20rpx;
	
}
.packetrank .h2{
	margin-top: 25rpx;
	font-size:30rpx;
	font-weight: 600;
	color: #000;
}
.packetrank .p{
	width: 100%;
	height: 50rpx;
	line-height: 50rpx;
	font-size:26rpx;
	color: #999;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}
.packetrank .money{
	width: 130rpx;
	font-size:32rpx;
	font-weight: 600;
	color: #d40b01;
	text-align: right;
}
.rule{
	width: 90%;
	margin: 5% auto;
	background: #347afe;
	padding: 25rpx;
	border-radius:30rpx;
	box-sizing: border-box;	
}
.rule .title{
	margin: 30rpx auto;
	margin-bottom: 10rpx;
	border-top:1px solid #F5F5F5;
	text-align: center;
}
.rule .h2{
	display:inline-block;
	padding:0 20rpx;
	background: #347afe;
	font-size:30rpx;
	font-weight: 600;
	color: #fff;
	position: relative;
	top: -28rpx;
}
.rule .ruleitem{
	width: 94%;
	margin:0 auto;
	
}
.rule .p{
	font-size:26rpx;
	color: #F5F5F5;
	line-height: 50rpx;
}
.bottom{
	color: #f5f5f5;
	text-align: center;
}
.bottom .img{
	width:120rpx;
	height: 132rpx;
	margin-bottom: 20rpx;
}
.bottom .p{
	font-size:22rpx;
}